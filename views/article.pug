extends layout

block content
    h1= article.title
    h6 Written by #{author}
    p= article.body
    hr
    if user
        if user.id == article.author
            a.btn.btn-outline-dark(href="/articles/edit/"+article._id) Edit
            a.btn.btn-outline-danger.delete-article(href='#', data-id=article._id) Delete
